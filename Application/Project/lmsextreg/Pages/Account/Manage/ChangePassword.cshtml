@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword"></label>:
                <input asp-for="Input.OldPassword" class="form-control" style="margin-top:0px;" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div style="margin-top:10px;padding:10px;border: 1px dotted #000;">
                    <p style="margin-bottom:0px;font-weight:bold;">Password Strength:</p>
                    <ul style="margin-top:2px;margin-bottom:2px;">
                        <li>Password must be at least 12 characters long</li>
                        <li>Password must have at least one non-alphanumeric character</li>
                        <li>Passwords must have at least one digit (0 - 9)</li>
                        <li>Passwords must have at least one uppercase character (A - Z)</li>
                        <li>Passwords must have at least one lowercase character (a - z)</li>
                        <li>Passwords must use at least 6 different characters.</li>                                                                                           
                    </ul>
                </div> 
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>:
                <input asp-for="Input.NewPassword" class="form-control" style="margin-top:0px;" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>:
                <input asp-for="Input.ConfirmPassword" class="form-control" style="margin-top:0px;" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    @await  Html.PartialAsync("_ValidationScriptsPartial")    
}
